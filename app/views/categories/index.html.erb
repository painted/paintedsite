<div class='container'>
	<% if @categories.any? %>
		<div class='row'>
			<% @categories.each do |category| %>
			<div class='col-md-2'>
				<div class='image-link'>
					<%= link_to (image_tag category.image.url(:small)), category.url , class: 'uploaded-pic' %><br>
				</div>
				<div class='title'>
					<%= category.title %>
					<%= category.description[0..14] %>
				</div>
			</div>
			<% end %>
		</div>
	<% else %>
		No categories yet
	<% end %>
</div>